{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "withGlobalTauri": true,
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Cinefile",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "http": {
        "scope": ["https://api.themoviedb.org/*"],
        "request": true
      },
      "dialog": {
        "open": true
      },
      "fs": {
        "exists": true,
        "readDir": true,
        "readFile": true,
        "renameFile": true,
        "writeFile": true,
        "scope": ["$HOME/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.cinefile.mov",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Cinefile",
        "width": 800,
        "height": 600
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/pokevin/Cinefile/releases/download/v{{current_version}}/cinefile_{{current_version}}_{{arch}}_{{target}}.msi"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBQkQ0NzM3NUE1MjlBQ0QKUldUTm1sSmFOMGU5S3JsZGN2RmhvNnlmWHB5TnJQelVtWjRBWlJyVHQvaGpGKzM0b21FSWJvVVQK",
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
