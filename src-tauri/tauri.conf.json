{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "withGlobalTauri": true,
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "cinefile",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true
      },
      "fs": {
        "exists": true,
        "readDir": true,
        "readFile": true,
        "renameFile": true,
        "writeFile": true,
        "scope": ["$HOME/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.cinefile.mov",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "title": "cinefile",
        "width": 800,
        "height": 600
      }
    ]
  }
}
